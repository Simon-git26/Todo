{% extends 'base.html.twig' %}

{% block title %}Hello Task Create Controller!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   

    <div class="row">
        {{ form_start(form, {'action' : path('app_task_create')}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success pull-right">Ajouter une tache</button>
        {{ form_end(form) }}

        <a href="{{ path('app_task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
    </div>

</div>
{% endblock %}
