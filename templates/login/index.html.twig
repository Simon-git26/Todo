{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">

    <!-- Section: Design Block -->
    <section class="text-center text-lg-start">
        <style>
            .cascading-right {
            margin-right: -50px;
            }

            @media (max-width: 991.98px) {
            .cascading-right {
                margin-right: 0;
            }
            }
        </style>

        <!-- Jumbotron -->
        <div class="container py-4">
            <div class="row g-0 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card cascading-right" style="
                        background: hsla(0, 0%, 100%, 0.55);
                        backdrop-filter: blur(30px);
                        ">
                        <div class="card-body p-5 shadow-5 text-center">

                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <!-- Si user déja connecté -->
                            {% if app.user %}
                                <div class="mb-3">
                                    Vous êtes connecté en tant que : {{ app.user.username }}
                                </div>
                            {% endif %}

                            <h2 class="fw-bold mb-5">Se connecter !</h2>
                            

                            <!-- Formulaire -->
                            <form action="{{ path('app_login') }}" method="post" class="signin-form">

                                <!-- Email -->
                                <div class="form-group">
                                    <label for="username" class="d-flex justify-content-center">Email</label>
                                    <input type="text" class="form-control" placeholder="Votre Email..." id="username" name="_username" value="{{ last_username }}" required/>
                                </div>

                                <!-- Password -->
                                <div class="form-group">
                                    <label for="password" class="d-flex justify-content-center">Mot de Passe</label>
                                    <input type="password" class="form-control" placeholder="Mot de Passe..." id="password" name="_password" required/>
                                </div>


                                <!-- Submit Button-->
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary submit px-3">Se connecter</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <img src="{{ asset('img/test.jpg') }}" class="w-100 rounded-4 shadow-4" alt="todo list" />
                </div>

            </div>
        </div>
        <!-- Jumbotron -->
    </section>
    <!-- Section: Design Block -->

</div>


{% endblock %}
